{
  "version": "0.1.0",
  "private": true,
  "name": "C3-Sarma",
  "description": "C3 WEB Project",
  "devDependencies": {
    "karma": "^0.12.16",
    "karma-chrome-launcher": "^0.1.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-jasmine": "~0.1.0",
    "protractor": "^2.1.0",
    "tmp": "0.0.23",
    "shelljs": "^0.2.6",
    "json-server": "~0.8.5",
    "bower": "~1.7.2",
    "grunt": "~0.4.5",
    "grunt-contrib-jshint": "~0.11.3"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "pretest": "npm install",
    "start": "node node_modules/.bin/json-server db.json --routes routes.json --static c3web-server/src/main/resources/web --watch true --port 9000",
    "test": "node node_modules/karma/bin/karma start c3web-server/src/main/resources/test/karma.conf.js",
    "test-single-run": "node node_modules/karma/bin/karma start c3web-server/src/main/resources/test/karma.conf.js  --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js",
    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
